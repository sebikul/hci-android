<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/item_product">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/photo_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/pilhom3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/title_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/photo_product"

                android:layout_alignBottom="@+id/photo_product"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Brand" />
            <TextView
                android:id="@+id/title_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:layout_alignLeft="@+id/photo_product"
                android:layout_alignRight="@+id/photo_product"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Product name"
                android:layout_above="@+id/title_brand" />
            <TextView
                android:id="@+id/title_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/photo_product"
                android:layout_alignBottom="@+id/photo_product"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Price" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>